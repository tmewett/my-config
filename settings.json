{
    "files.exclude": {
        "**/*.o": true,
        ".venv": true,
    },
    "files.insertFinalNewline": true,
    "files.hotExit": "off",
    "editor.acceptSuggestionOnEnter": "off",
    "extensions.ignoreRecommendations": true,
    "editor.quickSuggestionsDelay": 100,
    "git-graph.dialog.deleteBranch.forceDelete": true,
    "git-graph.dialog.createBranch.checkOut": true,
    "editor.find.autoFindInSelection": "multiline",
    "git-graph.dialog.rebase.ignoreDate": false,
    "git-graph.dialog.stashUncommittedChanges.includeUntracked": false,
    "git-graph.dialog.resetCurrentBranchToCommit.mode": "Hard",
    "workbench.startupEditor": "newUntitledFile",
    "window.restoreWindows": "none",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespace": true,
    "github.gitAuthentication": false,
    "C_Cpp.dimInactiveRegions": false,
    "git.autoRepositoryDetection": "subFolders",
    "terminal.integrated.allowChords": false,
    "git-graph.commitDetailsView.location": "Docked to Bottom",
    "git-graph.markdown": false,
    "[plaintext]": {
        "editor.tabCompletion": "off",
        "editor.fontFamily": "Arial, Helvetica Neue, Sans",
        "editor.lineHeight": 20,
        "editor.fontSize": 18,
        "editor.wordWrap": "on"
    },
    "[markdown]": {
        "editor.fontFamily": "Arial, Helvetica Neue, Sans",
        "editor.lineHeight": 20,
        "editor.fontSize": 18,
        "editor.wordWrap": "on"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "dance.modes": {
        "insert": {
            "hiddenSelectionsIndicatorsDecoration": {}
        },
        "normal": {
            "hiddenSelectionsIndicatorsDecoration": {},
            "cursorStyle": "block-outline"
            // "selectionBehavior": "character"
        },
    },
    "diffEditor.renderSideBySide": false,
    "scm.defaultViewMode": "tree",
    "editor.accessibilitySupport": "off",
    "workbench.editor.languageDetection": false,
    "workbench.editor.historyBasedLanguageDetection": false,
    "editor.minimap.enabled": false,
    "code-runner.executorMap": {
        "python": "test -e Makefile && make $fullFileName; test -e .venv/bin/activate && source .venv/bin/activate; python -u $fullFileName",
    },
    "code-runner.saveAllFilesBeforeRun": true,
    "html.autoCreateQuotes": false,
    "search.searchOnType": false,
    "typescript.disableAutomaticTypeAcquisition": true,
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "window.commandCenter": false,
    "explorer.confirmDelete": false,
    "todotxtmode.removePriorityFromCompletedTasks": true,
    "workbench.editor.empty.hint": "hidden",
    "explorer.confirmDragAndDrop": false,
    "files.eol": "\n",
    "window.zoomLevel": -1,
    "amVim.smartRelativeLineNumbers": true,
    "amVim.useSystemClipboard": true,
    "bookmarks.label.suggestion": "useWhenSelected",
    "editor.bracketPairColorization.enabled": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "workbench.colorTheme": "GitHub Light",
}
